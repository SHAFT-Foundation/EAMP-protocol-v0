{
  "name": "@eamp/nodejs-express-server",
  "version": "1.0.0",
  "description": "Reference Node.js Express server implementation for EAMP protocol",
  "keywords": [
    "eamp",
    "accessibility",
    "express",
    "server",
    "reference-implementation"
  ],
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "docker:build": "docker build -t eamp-nodejs-server .",
    "docker:run": "docker run -p 3000:3000 eamp-nodejs-server"
  },
  "dependencies": {
    "@eamp/javascript-sdk": "workspace:*",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.10.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "ws": "^8.14.0",
    "uuid": "^9.0.0",
    "better-sqlite3": "^8.15.0",
    "node-cache": "^5.1.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/compression": "^1.7.2",
    "@types/morgan": "^1.9.4",
    "@types/ws": "^8.5.5",
    "@types/uuid": "^9.0.2",
    "@types/better-sqlite3": "^7.6.4",
    "@types/node": "^20.0.0",
    "@types/jest": "^29.5.0",
    "@types/supertest": "^2.0.12",
    "jest": "^29.6.0",
    "ts-jest": "^29.1.0",
    "supertest": "^6.3.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shaft-finance/eamp-protocol.git",
    "directory": "examples/servers/nodejs-express"
  },
  "license": "MIT",
  "author": {
    "name": "Shaft Finance",
    "email": "hello@shaft.finance"
  }
}