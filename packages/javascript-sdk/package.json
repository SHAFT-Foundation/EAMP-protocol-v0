{
  "name": "@eamp/javascript-sdk",
  "version": "1.0.0",
  "description": "Official JavaScript/TypeScript SDK for the Extended Accessibility Metadata Protocol (EAMP)",
  "keywords": [
    "accessibility",
    "eamp",
    "metadata",
    "wcag",
    "ai-agents",
    "assistive-technology"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "eventemitter3": "^5.0.1",
    "ws": "^8.14.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.6.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.0",
    "jest": "^29.6.0",
    "jest-dom": "^4.0.0",
    "jest-environment-jsdom": "^29.6.0",
    "ts-jest": "^29.1.0",
    "tsup": "^7.2.0",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {
    "typescript": ">=4.9.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shaft-finance/eamp-protocol.git",
    "directory": "packages/javascript-sdk"
  },
  "license": "MIT",
  "author": {
    "name": "Shaft Finance",
    "email": "hello@shaft.finance"
  }
}